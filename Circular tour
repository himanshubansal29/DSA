public int tour(int petrol[], int distance[]){

        int tank=0,total=0,idx=0;
        for(int i=0;i<petrol.length;i++){
            int consume=petrol[i]-distance[i];
            tank+=consume;
            total+=consume;
            if(tank<0){
                idx=i+1;
                tank=0;
            }
        }
        if(total<0){
            return -1;
        }
        else{
            return idx;
        }
    }
